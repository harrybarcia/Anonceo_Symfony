{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | 

    {% if modification %}
        Modifier : {{ categorie.titre }}
    {% else %}
        Ajouter une catégorie
    {% endif %}

{% endblock %}




{% block h1 %}

    {% if modification %}
        Modifier : {{ categorie.titre }}
    {% else %}
        Ajouter une catégorie
    {% endif %}

{% endblock %}




{% block body %}

    <a class="btn btn-info m-3" href="{{ path('categorie_afficher') }}">Retour catégories</a>



    <div class="col-md-6 mx-auto">

        {{ form_start(formCategorie) }}

        {{ form_row(formCategorie.titre) }}

        {{ form_row(formCategorie.motscles) }}
        

        <input type="submit" 
        
            {% if modification %}
                value="Modifier"
            {% else %}
                value="Ajouter"
            {% endif %}
    
         class="btn btn-danger col-md-12 mt-3">

         

        {{ form_end(formCategorie) }}

    </div>




{% endblock %}