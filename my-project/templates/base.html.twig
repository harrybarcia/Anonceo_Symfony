<!DOCTYPE html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Anonceo
			{% endblock %}
		</title>


		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

		{# <link rel="stylesheet" href="https://bootswatch.com/5/spacelab/bootstrap.min.css"> #}

		<link
		rel="stylesheet" href="{{ asset('css/style.css') }}">

		{#
				            La fonction twig asset() permet d'accéder au dossier public 
				            1 argument : un fichier qui se trouve dans le dossier public
				        #}

		{% block stylesheets %}{% endblock %}


	</head>

	<body>

		<nav class="navbar navbar-expand-lg navbar-light bg-info">
			<div class="container-fluid">
				<a class="navbar-brand" href="#">Anonceo</a>

				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">

						<li class="nav-item">

							<div class="dropdown">
								<button class="btn dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" >
									Annonces
								</button>
								<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
									<li>
                                    
										<a class="dropdown-item" href="{{ path('annonce') }}">Consulter</a>
									</li>
									{% if not app.user %} {# non connecté #}
									<li>
										<a class="dropdown-item" href="{{ path('connexion') }}">Déposer annonce</a>
									</li>
									{% else %}
										{% if is_granted('ROLE_ADMIN') %}
										role admin
										{% elseif is_granted('ROLE_USER')  %}
									<li>									<li>
										<a class="dropdown-item" href="{{ path('ajouter_annonce') }}">Déposer annonce</a>
									</li>

										{% endif %}
									{% endif %}
									
								</ul>
							</div>
						</li>
                        <li class="nav-item">
							<a class="nav-link" href="{{ path('categorie_afficher') }}">Categorie</a>
                        </li>
						{% if not app.user %} {# non connecté #}
							<li class="nav-item">
									<a class="nav-link" href="{{ path('inscription') }}">Inscription</a>
							</li>

							<li class="nav-item">
									<a class="nav-link" href="{{ path('connexion') }}">Connexion</a>
							</li>
						{% else %}
							{% if is_granted('ROLE_ADMIN') %}
							role admin
							{% elseif is_granted('ROLE_USER')  %}
															<li class="nav-item dropdown">
										<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
											{{ app.user.pseudo }}
										</a>
										<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
											<li><a class="dropdown-item" href="{{path('profil')}}">Profil</a></li>
											<li><hr class="dropdown-divider"></li>
											<li><a class="dropdown-item" href="{{ path('deconnexion')}}">Déconnexion</a></li>
										</ul>	
										<li class="nav-item">
											<a class="nav-link" href="{{ path('ajouter_annonce') }}">Consulter mes annonces</a>
										</li>

							{% endif %}
						{% endif %}
						

                    </ul>

				</div>
			</div>
		</nav>

		<div class="col-md-10 mx-auto">

			<h1 class="titre">
				{% block h1 %}Anonceo
				{% endblock %}
			</h1>
			{% block body %}{% endblock %}

		</div>

		

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>


	</body>
</html>
